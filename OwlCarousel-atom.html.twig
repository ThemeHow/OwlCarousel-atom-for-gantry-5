{% extends '@nucleus/partials/particle.html.twig' %}

{% block particle %}
    {% assets in 'head' %}
        {% if particle.enabled %}
            <link rel="stylesheet" href="{{ url('gantry-theme://css/owl.carousel.min.css') }}" type="text/css"/>
        {% endif %}
    {% endassets -%}

    {% assets in particle.jslocation|default('footer') %}
        {% if particle.enabled %}
            {% do gantry.load('jquery') %}
            <script src="{{ url('gantry-theme://js/owl.carousel.min.js') }}" type="text/javascript"></script>
        {% endif %}
    {% endassets -%}
{% endblock %}